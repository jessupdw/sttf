<form role="form" class="match-form" action="/match/save">

    <div class="panel panel-primary">

        <div class="panel-heading">
            <h3 class="panel-title">Log your match</h3>
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="col-xs-6">
                    <h4 class="text-center">Players</h4>
                </div>
                <div class="col-xs-2">
                    <h5 class="text-center">Game 1</h5>
                </div>
                <div class="col-xs-2">
                    <h5 class="text-center">Game 2</h5>
                </div>
                <div class="col-xs-2">
                    <h5 class="text-center">Game 3</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="input-group">
                        <span class="input-group-addon">#1</span>
                        <select class="form-control" name="player1" required>
                            <option value="">Select a player</option>
                            <% _.each(players, function (player) { %>
                                <option value="<%= player.id %>"><%= player.fullName() %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="0" name="player1_game1" required>
                </div>
                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="0" name="player1_game2" required>
                </div>
                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="" name="player1_game3">
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-xs-6">
                    <div class="input-group">
                        <span class="input-group-addon">#2</span>
                        <select class="form-control" name="player2" required>
                            <option value="">Select a player</option>
                            <% _.each(players, function (player) { %>
                                <option value="<%= player.id %>"><%= player.fullName() %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="0" name="player2_game1" required>
                </div>
                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="0" name="player2_game2" required>
                </div>
                <div class="col-xs-2">
                    <input type="text" class="form-control" placeholder="" name="player2_game3">
                </div>
            </div>
        </div>

    </div>

    <button class="btn btn-lg btn-primary pull-right" type="submit">Save</button>

</form>
